<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render '/books/list', user: @user %>
        <%= render '/books/form', book: @book %>
      </div>
      <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @books.each do |books| %>
        <tbody>
          <tr>
            <td>
              <% if @user.profile_image.attached? %>
                <%= image_tag @user.profile_image, size: "40×40" %>
              <% else %>
                <%= image_tag 'no_image', size: "40×40" %>
              <% end %>
            </td>
            <td>
              <%= link_to books.title, book_path(books.id) %>
            </td>
            <td>
              <%= books.body %>
            </td>
          </tr>
        </tbody>
        <% end %>
        </thead>
      </table>
      </div>
    </div>
  </div>
</main>