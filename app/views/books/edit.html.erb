<main>
  <p id="notice">
    <% if @book.errors.any? %>
      <%= @book.errors.count %>件のerrorが発生しました
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>
  </p>
  <div class="container">
      <div class="col-sm-12 col-md-8 col-lg-5 px5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
        <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>

        <p>Opinion</p>
        <%= f.text_area :body %>
        <br>
        <%= f.submit 'Update Book' %>
        <% end %>
        <%= link_to "Show", book_path %>|
        <%= link_to "Back", books_path %>
      </div>
  </div>
</main>